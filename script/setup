#!/usr/bin/env bash

set -x

# Install Homebrew
NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# Install common utils
brew install \
    glibc \
    gcc \
    zsh \
    yadm \
    neovim \
    tmux \
    bat \
    ripgrep \
    zoxide \
    entr \
    fd \
    gpg \
    fzf \
    eza \
    diff-so-fancy \
    kubecolor

# Set ZSH as default shell
sudo chsh -s /home/linuxbrew/.linuxbrew/bin/zsh "${USER}"

env

# Clone dotfiles
yadm clone -f https://github.com/dangle/dotfiles
yadm reset --hard HEAD

if [[ "$(cat /proc/self/cgroup)" == "0::/" ]]; then
    yadm config local.class Container
    echo "ssh-rsa  melissa.nuno@gmail.com" > ~/.ssh/authorized_keys
fi

yadm alt

# Install vim-plug and plugins
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
nvim +PlugInstall +UpdateRemotePlugins +qall
