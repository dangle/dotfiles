hc rule --label=firefox_web class="firefox" monitor=0 tag=web index=e

(
    hc rule once class="firefox" monitor=1 tag=dev index=0
    hc spawn firefox
) &

sleep 3

if [[ $(wmctrl -lx | grep "Navigator.firefox" | wc -l) == "1" ]]; then
    hc spawn firefox
fi

if [[ $(wmctrl -lx | grep "Navigator.firefox" | wc -l) == "2" ]]; then
    hc focus_monitor 0
    hc silent shift -e right
fi

#hc unrule firefox_web
