[colors]
#pink = #b55496
pink = #b65497
yellow = #cecad1
#green = #7ea145
green = #59aa49
#purple = #3c7b8e
purple = #4776a6

transparent = #0000
grey = #CC454545
transparent-grey = #99454545
dark-grey = #333
light-grey = #999
white = #FFF
off-white = #d7d4dd

#background = #E5121212
background = #0a0c0c

[base/bar]
monitor = ${env:MONITOR:}

height = 32
offset-y = 24

background = ${colors.transparent}

font-0 = "Cantarell:style=Bold:size=13;2"
font-1 = "FontAwesome:style=Regular:size=22;5"
font-2 = "FontAwesome:style=Regular:size=14;3"
font-3 = "FontAwesome:style=Regular:size=21;5"
font-4 = "Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=14;3"
font-5 = "Cantarell:style=Bold:size=10;8"
font-6 = "Roboto Sans:style=Bold:size=9;2"
font-7 = "FontAwesome:style=Regular:size=14;5"
font-8 = "FontAwesome:style=Regular:size=14;3"

[bar/cpu]
inherit = base/bar

width = 28%:-20
height = 24
offset-x = 20
offset-y = 12

background = ${colors.transparent}

modules-left = cpu


[bar/ram]
inherit = base/bar

width = 28%:-42
height = 24
offset-x = 52
offset-y = 40

modules-left = ram


[bar/workspace]
inherit = base/bar

width = 50%:-273
height = 24
offset-x = 273
offset-y = 4

modules-left = workspace


[bar/calendar]
inherit = base/bar

foreground = ${colors.off-white}
background = ${colors.background}
radius = 8

modules-center = date

width = 320
offset-x = 50%:-160


[bar/media]
inherit = base/bar
modules-left = media-artist
modules-center = media-title
modules-right = media-back media-play-pause media-forward media-bluetooth pulseaudio

background = ${colors.background}

width = 40%
offset-x = 30%

radius = 8
bottom = true


[bar/stats]
inherit = base/bar
modules-left = cpu
modules-center = ram
modules-right = workspace
width = 20%
offset-x  = 80
radius = 8
background = ${colors.background}


[bar/status]
inherit = base/bar
modules-left = wifi wired donotdisturb
modules-center = host
modules-right = system gmail protonmail

#bottom = true
width = 20%
offset-x = 80%:-80

background = ${colors.background}
radius = 8

tray-position = right
tray-background = ${colors.background}
tray-foreground = ${colors.white}
tray-padding = 5
tray-maxsize = 20


[module/system]
type = custom/text

content = %{T8}%{T-}
content-background = ${colors.background}
content-foreground = ${colors.purple}
content-padding = 3

click-left = ~/.config/polybar/scripts/system-menu.sh


[module/host]
type = custom/script
format-background = ${colors.background}
format-padding = 4
exec = ~/.config/polybar/scripts/get_host_info.sh
interval = 0.5


[module/media-artist]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.pink}
format-padding = 3
exec = ~/.config/polybar/scripts/get_artist.sh
interval = 0.5


[module/media-title]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.green}
format-padding = 3
exec = playerctl metadata title 2>/dev/null | cut -c -150
interval = 0.5


[module/media-back]
type = custom/text
content = %{T3}%{T-}
content-foreground = ${colors.purple}
content-padding = 3
click-left = playerctl previous


[module/media-play-pause]
type = custom/script
format-foreground = ${colors.purple}
format-padding = 3
exec = ~/.config/polybar/scripts/get_player_status_icon.sh
interval = 0.5
click-left = playerctl play-pause


[module/media-forward]
type = custom/text
content = %{T3}%{T-}
content-foreground = ${colors.purple}
content-padding = 3
click-left = playerctl next


[module/media-bluetooth]
type = custom/script
format-foreground = ${colors.off-white}
format-padding = 3
exec = ~/.config/polybar/scripts/get_bluetooth_status_icon.sh
interval = 0.5
click-left = ~/.config/polybar/scripts/toggle_bluetooth.sh


[module/donotdisturb]
type = custom/script
format-foreground = ${colors.pink}
format-padding = 3
exec = ~/.config/polybar/scripts/get_do_not_disturb.sh
interval = 0.5
click-left = ~/.config/polybar/scripts/toggle_dnd.sh


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.yellow}
format-volume-padding = 3
format-volume = <ramp-volume>
label-muted-background = ${colors.grey}
label-muted-padding = 3
label-muted = "%{T2}  %{T-}"
ramp-volume-0 = "%{T2}  %{T-}"
ramp-volume-1 = "%{T2} %{T-}"
ramp-volume-2 = "%{T4}%{T-}"


[module/cpu]
type = internal/cpu
label = "%{T9}%{T-}  %percentage%%"
label-foreground = ${colors.pink}
label-padding = 3


[module/ram]
type = internal/memory
label = "%gb_used%  %{T9}%{T-}  %gb_total%"
label-foreground = ${colors.green}
label-padding = 3


[module/workspace]
type = custom/script
exec = ~/.config/polybar/scripts/get_workspace.sh
interval = 0.5


[module/date]
type = internal/date
label = "%{F#59aa49}%{T3}%{T-}%{F-}  %date%     %{F#4776a6}%{T3}%{T-}%{F-}  %time%"
date = "%A, %h %d"
time = "%l:%M %p"


[module/wired]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.pink}
content-padding = 3
content = "%{T5}%{T-}"


[module/wifi]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.pink}
content-padding = 3
content = "%{T5}%{T-}"

[module/gmail]
type = custom/script
exec = ~/.config/polybar/gmail/launch.py --prefix '%{T8}%{T-}' --nosound
tail = true
click-left = xdg-open https://mail.google.com

[module/protonmail]
type = custom/script
exec = ~/.pyenv/versions/bar-protonmail/bin/bar-protonmail -f polybar -b '%{T8}%{T-}' -dn
interval = 10
click-left = xdg-open https://mail.proton.me/u/0/inbox

